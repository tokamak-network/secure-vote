{
  "name": "maci-test",
  "version": "1.0.0",
  "private": true,
  "description": "MACI + MaciRLA voting platform with RLA verification",
  "scripts": {
    "compile": "hardhat compile && hardhat build-poseidon",
    "test": "hardhat test",
    "test:e2e": "NODE_OPTIONS='--max-old-space-size=4096' hardhat test test/five-vote-e2e.ts",
    "test:bench": "BENCH_NAME=10-vote NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' hardhat test test/benchmark-e2e.ts && BENCH_NAME=30-vote NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' hardhat test test/benchmark-e2e.ts",
    "test:bench:10": "BENCH_NAME=10-vote NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' hardhat test test/benchmark-e2e.ts",
    "test:bench:30": "BENCH_NAME=30-vote NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' hardhat test test/benchmark-e2e.ts",
    "test:rla": "NODE_OPTIONS='--max-old-space-size=4096' hardhat test test/rla-e2e.ts",
    "compile:circuit": "bash scripts/compile-circuit.sh",
    "download-zkeys": "bash scripts/download-zkeys.sh",
    "deploy": "hardhat run scripts/deploy-platform.ts --network localhost",
    "start": "bash scripts/start-platform.sh",
    "simulate": "ts-node experiments/simulate.ts",
    "gas-analysis": "ts-node experiments/gas-analysis.ts",
    "test:all": "bash scripts/test-all.sh",
    "test:all:quick": "bash scripts/test-all.sh --quick"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "blake-hash",
      "keccak",
      "secp256k1",
      "esbuild"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "circomlibjs": "^0.1.7",
    "maci-cli": "2.5.0",
    "maci-contracts": "2.5.0",
    "maci-core": "2.5.0",
    "maci-crypto": "2.5.0",
    "maci-domainobjs": "2.5.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "hardhat": "^2.28.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
